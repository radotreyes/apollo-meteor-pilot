{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true
  },
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["graphql"],
  "rules": {
    "import/no-extraneous-dependencies": ["enabled", "never"],
    "import/no-unresolved": ["enabled", "never"],
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", { "code": 120 }],
    "no-constant-condition": "warn",
    "no-underscore-dangle": "off",
    "no-unused-vars": "warn",
    "quotes": ["error", "backtick", { "allowTemplateLiterals": true }],
    "react/forbid-prop-types": ["enabled", "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-uses-vars": [2],
    "react/prefer-stateless-function": ["enabled", "never"],
    "semi": ["error", "never"]
  }
}
